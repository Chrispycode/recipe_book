<div class="nested-fields">
  <%= f.hidden_field :_destroy %>
  <div class="input-group mb-3">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Ingwer' %>
    <%= f.number_field :amount, class: 'form-control', placeholder: '100', step: :any %>
    <%= f.select :unit, Ingredient::UNITS, {:include_blank => "Maßeinheit auswählen"}, {:class => "form-select"} %>
  </div>
  <%= link_to "Löschen", '#', class: "remove_fields btn btn-danger btn-sm mb-3 float-end" %>
</div>
